<div class="max-w-4xl mx-auto px-4 py-8">
  <!-- Back to dashboard -->
  <div class="mb-6">
    <%= link_to "‚Üê Voltar ao Dashboard", root_path, class: "text-gray-600 hover:text-gray-800 font-medium" %>
  </div>

  <!-- Profile Card -->
  <div class="bg-white rounded-xl shadow-sm">
    <!-- Header -->
    <div class="border-b border-gray-200 px-6 py-4">
      <div class="flex items-center gap-4">
        <div class="w-16 h-16 rounded-full flex items-center justify-center text-white text-xl font-semibold" style="background-color: #228B22;">
          <%= @user.name.split.map(&:first).join.upcase %>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= @user.name %></h1>
          <p class="text-gray-600">T√©cnico/Dirigente</p>
        </div>
      </div>
    </div>

    <!-- Profile Content -->
    <div class="p-6">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- User Info -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Informa√ß√µes Pessoais</h2>

          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Nome Completo</label>
              <div class="px-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-900">
                <%= @user.name %>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">E-mail</label>
              <div class="px-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-900">
                <%= @user.email %>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
              <div class="px-3 py-2 border border-gray-300 rounded-lg bg-gray-50">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= @user.active? ? 'Ativo' : 'Inativo' %>
                </span>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Membro desde</label>
              <div class="px-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-900">
                <%= @user.created_at.strftime("%d/%m/%Y") %>
              </div>
            </div>
          </div>
        </div>

        <!-- Game Stats -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Estat√≠sticas do Jogo</h2>

          <div class="grid grid-cols-2 gap-4">
            <div class="bg-gray-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold" style="color: #228B22;">0</div>
              <div class="text-sm text-gray-600">Salas Single</div>
            </div>

            <div class="bg-gray-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold" style="color: #0047AB;">0</div>
              <div class="text-sm text-gray-600">Salas Multi</div>
            </div>

            <div class="bg-gray-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold text-green-600">0</div>
              <div class="text-sm text-gray-600">Vit√≥rias</div>
            </div>

            <div class="bg-gray-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold text-red-600">0</div>
              <div class="text-sm text-gray-600">Derrotas</div>
            </div>
          </div>

          <div class="mt-6 p-4 rounded-lg border border-gray-200">
            <h3 class="font-medium text-gray-900 mb-2">üèÜ Conquistas</h3>
            <p class="text-sm text-gray-600">Nenhuma conquista ainda. Comece jogando!</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="border-t border-gray-200 px-6 py-4">
      <div class="flex justify-between items-center">
        <div class="text-sm text-gray-600">
          √öltima atualiza√ß√£o: <%= @user.updated_at.strftime("%d/%m/%Y √†s %H:%M") %>
        </div>

        <%= button_to "üö™ Sair da Conta", sign_out_path,
            method: :delete,
            data: { confirm: "Tem certeza que deseja sair?" },
            class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-all font-medium" %>
      </div>
    </div>
  </div>
</div>
