<% content_for :title, "#{@club.name} - Elenco" %>

<div class="max-w-7xl mx-auto px-4 py-8">
  <!-- Header do Club -->
  <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
    <div class="flex justify-between items-center mb-4">
      <div class="flex items-center gap-4">
        <div class="w-16 h-16 rounded-full bg-gradient-to-r from-green-500 to-green-600 flex items-center justify-center">
          <span class="text-2xl font-bold text-white"><%= @club.name.split.map(&:first).join[0..2].upcase %></span>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @club.name %></h1>
          <p class="text-lg text-gray-600"><%= @club.city %> ‚Ä¢ <%= @club.division.name %></p>
          <p class="text-sm text-gray-500"><%= @club.stadium_name %> (<%= number_with_delimiter(@club.stadium_capacity) %> lugares)</p>
        </div>
      </div>
      <div class="text-center">
        <p class="text-3xl font-bold text-green-600"><%= @club.budget_formatted %></p>
        <p class="text-sm text-gray-500">Or√ßamento Dispon√≠vel</p>
      </div>
    </div>

    <!-- Navega√ß√£o -->
    <div class="flex gap-3">
      <%= link_to "#{football_icon} Elenco".html_safe, squad_club_path(@club), class: "px-6 py-2 bg-green-600 text-white rounded-lg font-medium hover:bg-green-700 transition-all" %>
      <%= link_to "#{save_icon} Escala√ß√£o".html_safe, lineup_club_path(@club), class: "px-6 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-all" %>
      <%= link_to "‚Üê Voltar", @club, class: "px-6 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-all" %>
    </div>
  </div>

  <!-- Estat√≠sticas do Elenco -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-xl shadow-sm p-6 text-center">
      <h3 class="text-3xl font-bold text-gray-900 mb-1"><%= @club.players.count %></h3>
      <p class="text-sm text-gray-600 font-medium">Jogadores</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-6 text-center">
      <h3 class="text-3xl font-bold text-blue-600 mb-1"><%= @club.average_overall %>‚≠ê</h3>
      <p class="text-sm text-gray-600 font-medium">Overall M√©dio</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-6 text-center">
      <h3 class="text-2xl font-bold text-green-600 mb-1">R$ <%= number_with_delimiter(@total_market_value / 1000, delimiter: ".") %>K</h3>
      <p class="text-sm text-gray-600 font-medium">Valor de Mercado</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-6 text-center">
      <h3 class="text-2xl font-bold text-red-600 mb-1">R$ <%= number_with_delimiter(@total_salary / 1000, delimiter: ".") %>K</h3>
      <p class="text-sm text-gray-600 font-medium">Folha Salarial</p>
    </div>
  </div>

  <!-- Elenco por Posi√ß√£o -->
  <%
    position_colors = {
      'GK' => 'bg-yellow-500',
      'Defense' => 'bg-blue-500',
      'Midfield' => 'bg-green-500',
      'Attack' => 'bg-red-500'
    }

    position_icons = {
      'GK' => 'ü•Ö',
      'Defense' => 'üõ°Ô∏è',
      'Midfield' => '‚öôÔ∏è',
      'Attack' => football_icon
    }
  %>

  <% @players_by_position.each do |category, players| %>
    <div class="bg-white rounded-xl shadow-sm mb-6">
      <div class="px-6 py-4 border-b border-gray-100">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 rounded-lg <%= position_colors[category] || 'bg-gray-500' %> flex items-center justify-center">
            <span class="text-white text-lg"><%= position_icons[category] || football_icon %></span>
          </div>
          <div>
            <h2 class="text-xl font-bold text-gray-900">
              <%= case category
                  when 'GK' then 'Goleiros'
                  when 'Defense' then 'Defensores'
                  when 'Midfield' then 'Meio-campo'
                  when 'Attack' then 'Atacantes'
                  else category
                  end %>
            </h2>
            <p class="text-sm text-gray-500"><%= players.count %> jogador<%= players.count != 1 ? 'es' : '' %></p>
          </div>
        </div>
      </div>

      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% players.each do |player| %>
            <div class="border border-gray-200 rounded-xl p-4 hover:border-green-300 hover:shadow-md transition-all cursor-pointer">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-12 h-12 rounded-full bg-gradient-to-r from-gray-400 to-gray-500 flex items-center justify-center flex-shrink-0">
                  <span class="text-lg font-bold text-white"><%= player.name.split.map(&:first).join[0..1].upcase %></span>
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="font-semibold text-gray-900 truncate"><%= player.name %></h4>
                  <div class="flex items-center gap-2">
                    <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                      <%= player.position %>
                    </span>
                    <span class="text-sm text-gray-500"><%= player.age %> anos</span>
                  </div>
                </div>
              </div>

              <div class="flex items-center justify-between mb-3">
                <div class="text-center">
                  <div class="text-lg font-bold text-blue-600"><%= player.overall %>‚≠ê</div>
                  <div class="text-xs text-gray-500">Overall</div>
                </div>
                <div class="text-center">
                  <div class="text-sm font-bold text-green-600">R$ <%= number_with_delimiter(player.market_value / 1000) %>K</div>
                  <div class="text-xs text-gray-500">Valor</div>
                </div>
                <div class="text-center">
                  <div class="text-sm font-bold text-red-600">R$ <%= number_with_delimiter(player.salary / 1000) %>K</div>
                  <div class="text-xs text-gray-500">Sal√°rio</div>
                </div>
              </div>

              <% if player.young_talent? %>
                <div class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800">
                  ‚≠ê Promessa
                </div>
              <% elsif player.veteran? %>
                <div class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-purple-100 text-purple-800">
                  üë¥ Veterano
                </div>
              <% elsif player.starter_quality? %>
                <div class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                  üëë Titular
                </div>
              <% else %>
                <div class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-600">
                  üîÑ Reserva
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Dica no final -->
  <div class="bg-blue-50 border border-blue-200 rounded-xl p-6 text-center">
    <div class="flex items-center justify-center gap-2 mb-2">
      <span class="text-2xl"><%= lightbulb_icon %></span>
      <h3 class="text-lg font-semibold text-blue-900">Dica</h3>
    </div>
    <p class="text-sm text-blue-700">
      <strong>Overall alto:</strong> Melhor desempenho ‚Ä¢
      <strong>Promessas:</strong> Crescem r√°pido ‚Ä¢
      <strong>Veteranos:</strong> Experi√™ncia valiosa
    </p>
  </div>
</div>