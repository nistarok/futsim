<div class="max-w-2xl mx-auto px-4 py-8">
  <!-- Header -->
  <div class="mb-6">
    <%= link_to "← Voltar", @room, class: "text-gray-600 hover:text-gray-800 font-medium mb-4 inline-block" %>
    <h1 class="text-3xl font-bold text-gray-900">Criar Clube</h1>
    <p class="text-gray-600">Configure seu clube para a sala "<%= @room.name %>"</p>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-xl shadow-sm p-6">
    <%= form_with model: [@room, @club], local: true, class: "space-y-6" do |form| %>
      <!-- Club Name -->
      <div>
        <%= form.label :name, "Nome do Clube", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "Ex: Santos FC" %>
        <% if @club.errors[:name].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @club.errors[:name].first %></p>
        <% end %>
      </div>

      <!-- City -->
      <div>
        <%= form.label :city, "Cidade", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :city,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "Ex: Santos, SP" %>
        <% if @club.errors[:city].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @club.errors[:city].first %></p>
        <% end %>
      </div>

      <!-- Founded Year -->
      <div>
        <%= form.label :founded_year, "Ano de Fundação", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :founded_year,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "Ex: 1912",
            value: @club.founded_year || 1920 %>
        <% if @club.errors[:founded_year].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @club.errors[:founded_year].first %></p>
        <% end %>
      </div>

      <!-- Stadium Name -->
      <div>
        <%= form.label :stadium_name, "Nome do Estádio", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :stadium_name,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "Ex: Vila Belmiro" %>
        <% if @club.errors[:stadium_name].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @club.errors[:stadium_name].first %></p>
        <% end %>
      </div>

      <!-- Stadium Capacity -->
      <div>
        <%= form.label :stadium_capacity, "Capacidade do Estádio", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :stadium_capacity,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "Ex: 16068",
            value: @club.stadium_capacity || 10000 %>
        <% if @club.errors[:stadium_capacity].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @club.errors[:stadium_capacity].first %></p>
        <% end %>
      </div>

      <!-- Division -->
      <div>
        <%= form.label :division_id, "Divisão", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.collection_select :division_id, @divisions, :id, :name,
            { prompt: "Selecione uma divisão..." },
            { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
        <% if @club.errors[:division_id].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @club.errors[:division_id].first %></p>
        <% end %>
      </div>

      <!-- Budget -->
      <div>
        <%= form.label :budget, "Orçamento Inicial", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :budget,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "Ex: 1000000",
            value: @club.budget || 1000000,
            step: 10000 %>
        <p class="mt-1 text-sm text-gray-500">Orçamento em reais para compras e salários</p>
        <% if @club.errors[:budget].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @club.errors[:budget].first %></p>
        <% end %>
      </div>

      <!-- Info Box -->
      <div class="bg-blue-50 rounded-lg p-4 border-l-4 border-blue-500">
        <div class="flex items-center gap-2">
          <span class="text-blue-500">ℹ️</span>
          <h3 class="font-semibold text-blue-800">Informações Importantes</h3>
        </div>
        <ul class="text-sm text-blue-700 mt-2 space-y-1">
          <li>• Após criar o clube, você receberá jogadores automaticamente</li>
          <li>• O orçamento será usado para contratar novos jogadores</li>
          <li>• Você pode alterar essas informações depois</li>
        </ul>
      </div>

      <!-- Actions -->
      <div class="flex gap-3">
        <%= form.submit "Criar Clube",
            class: "flex-1 px-4 py-2 text-white rounded-lg font-medium hover:opacity-90 transition-all",
            style: "background-color: #228B22;" %>
        <%= link_to "Cancelar", @room,
            class: "px-4 py-2 text-gray-600 rounded-lg font-medium border border-gray-300 hover:bg-gray-50 transition-all" %>
      </div>
    <% end %>
  </div>
</div>