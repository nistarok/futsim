<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="text-center">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">FutSim - Football Simulator</h1>
    <p class="text-xl text-gray-600 mb-8">Manage your football teams and simulate matches</p>
  </div>

  <% if @current_user %>
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-2xl font-semibold mb-4">Welcome, <%= @current_user.name %>!</h2>
      <p class="text-gray-600 mb-4">You are successfully signed in.</p>
      <%= button_to "Sign Out", sign_out_path, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-2xl font-semibold mb-4">Sign In</h2>
      <p class="text-gray-600 mb-4">Sign in with your Google account:</p>
      <div class="flex space-x-4">
        <!-- Google OAuth form with Turbo disabled -->
        <%= form_with url: "/auth/google_oauth2", method: :post, local: true, data: { turbo: false } do |form| %>
          <%= form.button type: "submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex items-center cursor-pointer" do %>
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path fill="currentColor" d="M12.24 10.285V14.4h6.806c-.275 1.765-2.056 5.174-6.806 5.174-4.095 0-7.439-3.389-7.439-7.574s3.345-7.574 7.439-7.574c2.33 0 3.891.989 4.785 1.849l3.254-3.138C18.189 1.186 15.479 0 12.24 0c-6.635 0-12 5.365-12 12s5.365 12 12 12c6.926 0 11.52-4.869 11.52-11.726 0-.788-.085-1.39-.189-1.989H12.24z"/>
              </svg>
            Sign in with Google
          <% end %>
        <% end %>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-2xl font-semibold mb-4">Don't have an account?</h2>
      <p class="text-gray-600 mb-4">Contact an administrator to receive an invitation.</p>
    </div>
  <% end %>
</div>
