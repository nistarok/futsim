<div class="max-w-6xl mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Minhas Salas</h1>
      <p class="text-gray-600">Gerencie suas salas singleplayer e multiplayer</p>
    </div>
    <%= link_to "← Voltar ao Dashboard", root_path, class: "text-gray-600 hover:text-gray-800 font-medium" %>
  </div>

  <div class="grid lg:grid-cols-2 gap-8">
    <!-- Salas Singleplayer -->
    <div class="bg-white rounded-xl shadow-sm">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-semibold flex items-center gap-2">
            <span>👤</span>
            Salas Singleplayer
          </h2>
          <span class="px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-700">
            <%= @singleplayer_rooms.count %>/5
          </span>
        </div>
      </div>

      <div class="p-6">
        <% if @singleplayer_rooms.any? %>
          <div class="space-y-4">
            <% @singleplayer_rooms.each do |room| %>
              <div class="border border-gray-200 rounded-lg p-4 hover:border-green-500 hover:shadow-md transition-all duration-200">
                <div class="flex justify-between items-center">
                  <div>
                    <h3 class="font-semibold text-gray-900"><%= room.name %></h3>
                    <p class="text-sm text-gray-600">
                      Status:
                      <span class="<%= room.status == 'active' ? 'text-green-600' : 'text-gray-600' %>">
                        <%= room.status.humanize %>
                      </span>
                    </p>
                  </div>
                  <div class="flex gap-2">
                    <%= link_to "Ver", room, class: "px-3 py-1 text-sm rounded-lg font-medium text-white hover:opacity-90 transition-all", style: "background-color: #0047AB;" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-8">Nenhuma sala singleplayer ainda.</p>
        <% end %>

        <% if @singleplayer_rooms.count < 5 %>
          <%= link_to new_room_path(type: 'single'), class: "w-full mt-4 px-4 py-3 border-2 border-dashed border-gray-300 rounded-lg text-gray-600 hover:border-green-500 hover:text-green-600 transition-all duration-200 block text-center" do %>
            + Nova Sala Singleplayer
          <% end %>
        <% else %>
          <div class="w-full mt-4 px-4 py-3 border-2 border-dashed border-gray-200 rounded-lg text-gray-400 text-center">
            Limite de 5 salas singleplayer atingido
          </div>
        <% end %>
      </div>
    </div>

    <!-- Salas Multiplayer -->
    <div class="bg-white rounded-xl shadow-sm">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold flex items-center gap-2">
          <span>👥</span>
          Salas Multiplayer
        </h2>
      </div>

      <div class="p-6">
        <% if @multiplayer_rooms.any? %>
          <div class="space-y-4">
            <% @multiplayer_rooms.each do |room| %>
              <div class="border border-gray-200 rounded-lg p-4 hover:border-green-500 hover:shadow-md transition-all duration-200">
                <div class="flex justify-between items-center">
                  <div>
                    <h3 class="font-semibold text-gray-900"><%= room.name %></h3>
                    <p class="text-sm text-gray-600">
                      <%= room.current_players %>/<%= room.max_players %> jogadores
                    </p>
                  </div>
                  <div class="flex gap-2">
                    <%= link_to "Ver", room, class: "px-3 py-1 text-sm rounded-lg font-medium text-white hover:opacity-90 transition-all", style: "background-color: #0047AB;" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4">Nenhuma sala multiplayer ainda.</p>
        <% end %>

        <%= link_to new_room_path(type: 'multi'), class: "w-full mt-4 px-4 py-3 border-2 border-dashed border-gray-300 rounded-lg text-gray-600 hover:border-green-500 hover:text-green-600 transition-all duration-200 block text-center" do %>
          + Nova Sala Multiplayer
        <% end %>
      </div>
    </div>
  </div>
</div>
