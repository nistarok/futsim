<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Manage Invitations</h1>
  
  <!-- Invitation form -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h2 class="text-xl font-semibold mb-4">Invite a New User</h2>
    <%= form_with url: invitations_path, method: :post, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :email, "Email Address", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.email_field :email, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <%= form.submit "Send Invitation", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  </div>
  
  <!-- Invited users list -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold mb-4">Pending Invitations</h2>
    <% if @invited_users.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Invitation Sent</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @invited_users.each do |user| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap"><%= user.email %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= user.invitation_created_at&.strftime("%B %d, %Y %H:%M") %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to "Revoke", invitation_path(user), method: :delete, 
                    confirm: "Are you sure?", 
                    class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-gray-600">No pending invitations.</p>
    <% end %>
  </div>
</div>